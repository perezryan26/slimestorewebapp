@{
    ViewData["Title"] = "Home Page";
}

@model List<ItemViewModel>

<div class="container mt-5">
    <div class="jumbotron">
        <img src="assets/hero-banner.jpg" class="img-fluid margin-auto d-block w-100 rounded-bottom-large banner-shadow" />
        @if(Model == null)
        {
            <h1>No items are currently featured. Click here to view all slimes available</h1>
        }
        else
        {
            <h1 class="text-center text-white p-5 fw-bold">Featured Slime</h1>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-md-3 rounded-3">
                        <div class="card text-decoration-none link mb-3 border-style-none bg-offwhite shadow">
                            <a asp-route-id="@item.Id" asp-controller="Items" asp-action="Details" class="text-decoration-none link">
                                <img class="card-img-top" src="@item.ImageUrl" alt="Product Image">
                                <div class="card-body card-body-equal">
                                    <h5 class="card-title fw-bold fs-3 text-yellow">@item.Name</h5>
                                    <p class="card-text fw-bolder fs-4 text-orange2">$@item.Price</p>
                                </div>
                                <a asp-action="AddToCartQuick" asp-route-id="@item.Id" asp-route-returnUrl="@Context.Request.Path" class="text-white text-decoration-none fw-bolder">
                                    <div class="card-footer bg-orange text-center">
                                        Add to Cart
                                    </div>
                                </a>
                            </a>
                        </div>
                    </div>
                }
            </div>

            <div class="text-center container pt-5">
                <a asp-action="ItemsView" asp-controller="Items" class="btn bg-orange text-white fs-1 fw-bold">
                    Shop All Slime
                </a>
            </div>
            
        }
        
    </div>
</div>