@model PaymentViewModel

<div class="container mt-5">
    <h1 class="text-center text-white p-5 fw-bold comic">Payment</h1>
        <div class="">
            <h1 class="text-white fw-bold">SubTotal: <span class="fw-normal">$@String.Format("{0:0.00}", Model.CartPrice)</span></h1>
            <h1 class="text-white fw-bold">Shipping & Handling: <span class="fw-normal">Free</span></h1>
            <h1 class="text-white fw-bold">Tax: <span class="fw-normal">$@String.Format("{0:0.00}", Model.TotalPrice-Model.CartPrice)</span></h1>
            <h1 class="text-white fw-bold">Total: <span class="fw-normal">$@String.Format("{0:0.00}", Model.TotalPrice)</span></h1>
        </div>

        <div class="col-md-12">
            <form asp-action="Payment">
                <input type="hidden" asp-for="@Model.CartPrice" />
                <input type="hidden" asp-for="@Model.TotalPrice" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                <label asp-for="CardFirstName" class="control-label text-white fw-bold"></label>
                    <input asp-for="CardFirstName" class="form-control" />
                    <span asp-validation-for="CardFirstName" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                <label asp-for="CardLastName" class="control-label text-white fw-bold"></label>
                    <input asp-for="CardLastName" class="form-control" />
                    <span asp-validation-for="CardLastName" class="text-danger"></span>
                </div>
            <br />
                <div class="form-group">
                <label asp-for="CardNumber" class="control-label text-white fw-bold"></label>
                    <input asp-for="CardNumber" class="form-control" />
                    <span asp-validation-for="CardNumber" class="text-danger"></span>
                </div>
            <br />
                <div class="form-group">
                <label asp-for="ExpDate" class="control-label text-white fw-bold"></label>
                    <input asp-for="ExpDate" class="form-control" />
                    <span asp-validation-for="ExpDate" class="text-danger"></span>
                </div>
            <br />
                <div class="form-group">
                <label asp-for="Cvv" class="control-label text-white fw-bold"></label>
                    <input asp-for="Cvv" class="form-control" />
                    <span asp-validation-for="Cvv" class="text-danger"></span>
                </div>
            <br />
                <div class="form-group">
                <label asp-for="CardAddress" class="control-label text-white fw-bold"></label>
                    <input asp-for="CardAddress" class="form-control" />
                    <span asp-validation-for="CardAddress" class="text-danger"></span>
                </div>
            <br />
                <div class="form-group">
                <label asp-for="CardCity" class="control-label text-white fw-bold"></label>
                    <input asp-for="CardCity" class="form-control" />
                    <span asp-validation-for="CardCity" class="text-danger"></span>
                </div>
            <br />
                <div class="form-group">
                <label asp-for="CardCountry" class="control-label text-white fw-bold"></label>
                    <input asp-for="CardCountry" class="form-control" />
                    <span asp-validation-for="CardCountry" class="text-danger"></span>
                </div>
            <br />
                <div class="form-group">
                <label asp-for="CardZipCode" class="control-label text-white fw-bold"></label>
                    <input asp-for="CardZipCode" class="form-control" />
                    <span asp-validation-for="CardZipCode" class="text-danger"></span>
                </div>
            <br />
                <div class="form-group">
                <input type="submit" value="Continue to Order Overview" class="btn bg-orange text-white fw-bold" />
                </div>
            </form>
        </div>
</div>
