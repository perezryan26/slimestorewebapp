@model OrderCreateViewModel

@{
    ViewData["Title"] = "Details";
}

<div class="container mt-5">
    <h1 class="text-center text-white p-5 fw-bold comic">Order</h1>

    <div class="">
        <h1 class="text-white fw-bold">SubTotal: <span class="fw-normal">$@String.Format("{0:0.00}", Model.CartPrice)</span></h1>
        <h1 class="text-white fw-bold">Shipping & Handling: <span class="fw-normal">Free</span></h1>
        <h1 class="text-white fw-bold">Tax: <span class="fw-normal">$@String.Format("{0:0.00}", Model.TotalPrice-Model.CartPrice)</span></h1>
        <h1 class="text-white fw-bold">Total: <span class="fw-normal">$@String.Format("{0:0.00}", Model.TotalPrice)</span></h1>
    </div>

    <div class="row mt-5">
            @foreach (var item in Model.Cart.CartItems)
            {
                <div class="col-md-4 rounded-3">
                    <div class="card text-decoration-none link mb-3 border-style-none bg-offwhite shadow">
                            <img class="card-img-top" src="@item.Item.ImageUrl" alt="Product Image">
                            <div class="card-body card-body-equal">
                        <h5 class="card-title fw-bold fs-3 text-dark comic">@item.Quantity x @item.Item.Name</h5>
                                <p class="card-text fw-bolder fs-4 text-orange2 comic">$@item.Item.Price</p>
                            </div>
                    </div>
                </div>
            }



        <h1 class="text-white fw-bold mt-5">Shipping Details</h1>

        <div class="row mt-2">
            <div class="col-md-12">
                <form asp-action="ViewOrder">
                    <input type="hidden" asp-for="CartId" />
                    <input type="hidden" asp-for="CartPrice" />
                    <input type="hidden" asp-for="TotalPrice" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="OrderDate" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label text-white fw-bold"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label text-white fw-bold"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Address" class="control-label text-white fw-bold"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="City" class="control-label text-white fw-bold"></label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="Country" class="control-label text-white fw-bold"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <label asp-for="ZipCode" class="control-label text-white fw-bold"></label>
                        <input asp-for="ZipCode" class="form-control" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-group">
                        <input type="submit" value="Continue to payment" class="btn bg-orange text-white fw-bold" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
